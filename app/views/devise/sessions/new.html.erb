<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <div> Username: 
    <%= f.text_field :username, required: false, autofocus: true %>
    </div>
    <div> Email:
    <%= f.text_field :email, required: false, autofocus: true %>
    </div>
    <div> Password:
    <%= f.text_field :password, required: false %>
    </div>
    <div> Confirm Password:
    <%= f.text_field :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
